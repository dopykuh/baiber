.row
  .col-md-offset-3.col-sm-offset-3.col-xs-offset-3.col-md-6.col-sm-6.col-xs-6
    .dashboard_graph
      .row.x_title
        .col-md-6
          %h3
            = t('.sign_up', default: 'Sign up')
      .col-md-12.col-sm-12.col-xs-12
        = bootstrap_devise_error_messages!
        = form_for(resource, as: resource_name, 
          url: password_path(resource_name), html: { method: :post, role: "form" }) do |f|
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, class: 'form-control'
          .form-group
            = f.submit t('.send_me_reset_password_instructions', 
              default: 'Send me reset password instructions'), class: 'btn btn-primary'
          .form-group
            = render 'devise/shared/links'
      .clearfix
