.row
  .col-md-4.col-sm-12.col-xs-12
    .dashboard_graph
      .row.x_title
        .col-md-6
          %h3
            Bearbeiten
      .col-md-12.col-sm-12.col-xs-12
        = render 'form'
      .clearfix
  .col-md-8.col-sm-12.col-xs-12
    .dashboard_graph
      .row.x_title
        .col-md-6
          %h3
            Filters
        .col-md-6
          .pull-right
            = link_to 'Neu', new_filter_path(email: @email, mailboxes: @email.mailboxes), 
              class: 'btn btn-dark btn-sm'
      .col-md-12.col-sm-12.col-xs-12
        = render 'filters/filters'
      .clearfix
